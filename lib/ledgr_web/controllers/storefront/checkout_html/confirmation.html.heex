<div class="confirmation-page">
  <div class="confirmation-icon">&#10003;</div>
  <h1 class="confirmation-title">Thank you, <%= @customer_name %>!</h1>
  <p class="confirmation-subtitle">Your order has been placed successfully.</p>

  <div class="confirmation-details">
    <div class="confirmation-info">
      <span class="confirmation-label">
        <%= if @delivery_type == "delivery", do: "Delivery", else: "Pickup" %>:
      </span>
      <span><%= @delivery_date %></span>
    </div>
  </div>

  <div class="confirmation-summary">
    <h2 class="confirmation-section-title">Order Summary</h2>
    <%= for item <- @cart_items do %>
      <div class="confirmation-item">
        <span><%= item.product.name %> &times;<%= item.quantity %></span>
        <span><%= format_price(item.subtotal) %></span>
      </div>
    <% end %>
    <div class="confirmation-total">
      <span>Total</span>
      <span><%= format_price(@cart_total) %></span>
    </div>
  </div>

  <div class="confirmation-actions">
    <a href={@whatsapp_url} target="_blank" class="btn whatsapp-btn">
      Confirm via WhatsApp
    </a>
    <a href="/mr-munch-me/menu" class="btn btn-secondary">Back to Menu</a>
  </div>
</div>
