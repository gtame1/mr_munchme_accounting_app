<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="MrMunchMeAccountingApp" suffix="">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body>
    <div class="app-layout">
      <!-- Mobile hamburger button -->
      <button class="hamburger-btn" id="hamburger-btn" aria-label="Open menu" aria-expanded="false">
        <span class="hamburger-icon"></span>
      </button>
      <!-- Mobile overlay -->
      <div class="sidebar-overlay" id="sidebar-overlay"></div>

      <aside class="sidebar" id="sidebar">
        <.link navigate={~p"/"}>
          <div class="sidebar-header" >
            <span class="app-logo">üç™</span>
            <span class="app-title">Mr Munch Me</span>
          </div>
        </.link>

        <nav class="nav">
          <div class="nav-dropdown" data-default-open="true">
            <button type="button" class="nav-dropdown-toggle" onclick="toggleDropdown(this)">
              <span>Main Menu</span>
              <.icon name="hero-chevron-down" class="dropdown-icon" />
            </button>
            <div class="nav-dropdown-menu">
              <.link navigate={~p"/"} class="nav-link">Dashboard</.link>
              <.link navigate={~p"/orders"} class="nav-link">All Orders</.link>
              <.link navigate={~p"/orders/calendar"} class="nav-link">Order Calendar</.link>
              <.link navigate={~p"/inventory"} class="nav-link">Inventory</.link>
              <.link navigate={~p"/inventory/requirements"} class="nav-link">Shopping List</.link>
              <.link navigate={~p"/expenses"} class="nav-link">Expenses</.link>
            </div>
          </div> 

          <div class="nav-dropdown" data-default-open="true">
            <button type="button" class="nav-dropdown-toggle" onclick="toggleDropdown(this)">
              <span>Reports</span>
              <.icon name="hero-chevron-down" class="dropdown-icon" />
            </button>
            <div class="nav-dropdown-menu">
              <.link navigate={~p"/reports/pnl"} class="nav-link">P&L</.link>
              <.link navigate={~p"/reports/balance_sheet"} class="nav-link">Balance Sheet</.link>
              <.link navigate={~p"/reports/unit_economics_list"} class="nav-link">Unit Economics</.link>
              <.link navigate={~p"/reports/cash_flow"} class="nav-link">Cash Flow</.link>
              <.link navigate={~p"/account-transactions"} class="nav-link">Account Transactions</.link>
            </div>
          </div>

          <div class="nav-dropdown">
            <button type="button" class="nav-dropdown-toggle" onclick="toggleDropdown(this)">
              <span>Materials</span>
              <.icon name="hero-chevron-down" class="dropdown-icon" />
            </button>
            <div class="nav-dropdown-menu">
              <.link navigate={~p"/products"} class="nav-link">Product List</.link>
              <.link navigate={~p"/ingredients"} class="nav-link">Ingredient List</.link>
              <.link navigate={~p"/recipes"} class="nav-link">Recepies</.link>
            </div>
          </div>

          <div class="nav-dropdown">
            <button type="button" class="nav-dropdown-toggle" onclick="toggleDropdown(this)">
              <span>Reconciliation Tools</span>
              <.icon name="hero-chevron-down" class="dropdown-icon" />
            </button>
            <div class="nav-dropdown-menu">
              <.link navigate={~p"/reports/diagnostics"} class="nav-link">Diagnostics & Repairs</.link>
              <.link navigate={~p"/reconciliation/accounting"} class="nav-link">Account Reconciliation</.link>
              <.link navigate={~p"/reconciliation/inventory"} class="nav-link">Inventory Reconciliation</.link>
            </div>
          </div>

          <div class="nav-dropdown">
            <button type="button" class="nav-dropdown-toggle" onclick="toggleDropdown(this)">
              <span>Other</span>
              <.icon name="hero-chevron-down" class="dropdown-icon" />
            </button>
            <div class="nav-dropdown-menu">
              <.link navigate={~p"/customers"} class="nav-link">Customers</.link>
              <.link navigate={~p"/investments"} class="nav-link">Investments</.link>
              <.link navigate={~p"/transfers"} class="nav-link">Money Transfers</.link>
              <.link navigate={~p"/transactions"} class="nav-link">All Transactions</.link>
            </div>
          </div>

        </nav>
      </aside>

      <main class="content">
        <section class="content-body">
          <%= @inner_content %>
        </section>
      </main>
    </div>
  </body>
</html>
